{
  "extends": ["next", "prettier", "airbnb", "airbnb-typescript"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"],
    "react/prop-types": ["off"],
    "react/react-in-jsx-scope": ["off"]
  }
}
